<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  <h2 class="text-center">Cadastro</h2>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email" %>
    <%= f.input :password, required: true, label: false, placeholder: "Senha", hint: ("Pelo menos #{@minimum_password_length} dÃ­gitos" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirme sua senha" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cadastrar", :class => "btn btn-primary btn-block" %>
  </div>
<% end %>

