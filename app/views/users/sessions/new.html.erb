<section id="user-register-step2" class="login-tester">
  <div class="header-step2">
    <div class="img-box-mask">
      <div class="img-box">

      </div>
    </div>
    <h2>Login de profissional</h2>
    <div class="title">
      <h3>Preencha os campos abaixo</h3>
    </div>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, :class => "error-msg", :id => "flash_#{name}" if msg.is_a?(String) %>
    <%- end -%>  

    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, label: "E-mail" %>
      <%= f.input :password, required: false, label: "Senha" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <div class="form-actions">
        <button class="login-user">
          <%= f.button :submit, "Log in", :class => "btn btn-primary btn-block" %>
        </button>
        <button class="login-user">
          <%= link_to "Cadastre-se", new_user_registration_path, :class => "btn btn-primary btn-block" %>
        </button>
        <button class="login-user">
          <%= link_to "Esqueceu a senha?", new_password_path(resource_name), :class => "btn btn-primary btn-block" %>
        </button>
      </div>
    </div>
  <% end %>
</section>
