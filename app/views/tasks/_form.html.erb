<div class="task-form">
  <%= simple_form_for(@task, html: {class: "form-signin"}, url: (params[:id].present? ? project_task_path(@project, @task) : project_tasks_path)) do |f| %>
    <%= f.error_notification %>

    <%= f.input :objective, label: "Objetivo", required: true, autofocus: true, input_html: {class: "form-control"}%>
    <%= f.input :url, label: "URL", required: true, autofocus: true, input_html: {class: "form-control"}%>
    <%= f.input :cenary, label: "CenÃ¡rio", required: true, autofocus: true, input_html: {class: "form-control"}, :as => :text%>


    <div class="new-project-buttons">
      <button class="back-button back-ask-open">
        <%= link_to 'Voltar', :back, :class => "btn btn-primary btn-block btn-lg" %>
      </button>

      <button class="delete-button">
        <%= link_to "Excluir", project_path(project) , method: :delete, data: {confirm: "Deseja mesmo excluir este projeto?"}, :class => "pull-right" %>
      </button>

      <button class="next-button next-ask-open">
        <%= f.button :submit, :class => "btn btn-lg btn-primary btn-block", value: "Salvar", 'data-disable-with' => "..." %>
      </button>
    </div>
  <% end %>
</div>
