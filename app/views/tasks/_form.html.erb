<%= simple_form_for(@task, html: {class: "form-signin"}, url: project_tasks_path) do |f| %>
  <%= f.error_notification %>

  <%= f.input :objective, label: "Objetivo", required: true, autofocus: true, input_html: {class: "form-control"}%>
  <%= f.input :url, label: "URL", required: true, autofocus: true, input_html: {class: "form-control"}%>
  <%= f.input :cenary, label: "CenÃ¡rio", required: true, autofocus: true, input_html: {class: "form-control"}%>

  <%= f.button :submit, :class => "btn btn-lg btn-primary btn-block", value: "Continuar para perguntas", 'data-disable-with' => "..." %>
