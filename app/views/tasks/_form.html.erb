    <%= f.input :url, label: "URL", required: true, autofocus: true, input_html: {class: "form-control"}%>
    <%= f.input :cenary, label: "CenÃ¡rio", required: true, autofocus: true, input_html: {class: "form-control"}, :as => :text%>
    

