<section id="tester-register-step2"> 
  <div class="header-step2">
    <div class="img-box-mask">
      <div class="img-box">

      </div>
    </div>
    <h2>Edição de perfil<br> pessoa com deficiência</h2>
    <div class="title">
      <h3>Agora, alguns dados cadastrais</h3>
    </div>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, html: {class: "form-signin"}) do |f| %>

    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :full_name, required: true, autofocus: true, label: "Nome Completo", :class => "full" %>
      <%= f.input :email, required: true, autofocus: true, label: "E-mail", :class => "large" %>
      <%= f.input :age, required: true, label: "Idade", :class => "small" %>
      <%= f.input :gender, required: true, label: "Gênero", :as => :radio_buttons %>
      <%= f.input :kind_of_disability, required: true, label: "Qual é a sua deficiência? Selecione no mínimo uma.", :class => "medium", :as => :check_boxes %>
      <%= f.input :password, autocomplete: "off", required: false, label: "Nova senha" %>
      <%= f.input :password_confirmation, required: false, label: "Confirme sua senha" %>
      <%= f.input :current_password, required: true, label: "Senha atual" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
    </div>

    <div class="form-actions">
      <button class="back-button">
        <%= link_to "Voltar", :back, :class => "btn btn-primary btn-block" %>
      </button>
      <button class="next-button tester-button">
        <%= f.button :submit, "Atualizar", :class => "btn btn-primary btn-block" %>
      </button>
    </div>
  <% end %>
</section>