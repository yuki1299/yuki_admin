<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h2 class="text-center">Log in Testador</h2>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email" %>
    <%= f.input :password, required: false, label: false, placeholder: "Senha" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", :class => "btn btn-primary btn-block" %>
    <%= link_to "Esqueceu a senha?", new_password_path(resource_name), :class => "btn btn-primary btn-block" %>
    <%= link_to "Cadastre-se", new_tester_registration_path, :class => "btn btn-primary btn-block" %>
  </div>
<% end %>

