<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'form-signin', method: :post }) do |f| %>
  <%= f.error_notification %>

  <h2 class="text-center">Esqueceu a senha?</h2>
  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "E-mail" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enviar instruções de recuperação de senha", :class => "btn btn-primary btn-block" %>
  </div>
<% end %>