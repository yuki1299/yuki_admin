<p id="notice"><%= notice %></p>

<h1>Ativos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @active.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.status %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Adicionar à Espera', change_project_path(project, status: "Aguardando Resposta"), method: :put %></td>
        <td><%= link_to 'Adicionar aos Finalizados', change_project_path(project, status: "Finalizado"), method: :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

